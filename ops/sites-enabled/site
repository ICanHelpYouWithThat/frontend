server {
  listen 3001;
  server_name _;
  return 200;
}

server {
  listen 3001;

  # Make site accessible from http://localhost/
  server_name *.icanhelpyouwiththat.org;

  # redirect to HTTPS
  return 301 https://$host$request_uri;

  # to support FB notifications wanting to post to /  1/28/2015 sjl
  #   this is for 'invite a friend' functionality
  error_page  405     =200 $uri;
}


# Server for redirecting all blog requests: blog.icanhelpyouwiththat.org/* -> icanhelpyouwiththat.org/blog/* for SEO

server {
  listen 3002;
  server_name _;
  return 200;
}


# HTTPS Server for dev back ends
server {
  listen 3002 ssl;
  server_name stageapi.icanhelpyouwiththat.org;

  ssl_certificate /keys/certchain.pem;
  ssl_certificate_key /keys/key.pem;
  ssl_session_timeout 5m;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers "HIGH:!aNULL:!MD5 or HIGH:!aNULL:!MD5:!3DES";
  ssl_prefer_server_ciphers on;

  location / {
    proxy_set_header        Host $host;
    proxy_set_header        X-Real-IP $remote_addr;
    proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header        X-Forwarded-Proto $scheme;

    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;


    # Fix the "It appears that your reverse proxy set up is broken" error.
    proxy_pass          http://backend:3000;
  }
}

# HTTPS Server for front end
server {

  listen 3002 ssl;
  server_name *.icanhelpyouwiththat.org icanhelpyouwiththat.org;

  if ($http_x_forwarded_proto = "http") {
    return 301 https://$host$request_uri;
  }

  ssl_certificate /keys/certchain.pem;
  ssl_certificate_key /keys/key.pem;
  ssl_session_timeout 5m;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers "HIGH:!aNULL:!MD5 or HIGH:!aNULL:!MD5:!3DES";
  ssl_prefer_server_ciphers on;

  root /var/www;

  add_header  Cache-Control s-maxage=315360000;
  add_header  Cache-Control maxage=315360000;
  expires 365d;

  include /var/www/kubernetes/config/global.d/*.conf;

  location / {
    add_header Cache-Control "public";
    add_header  Cache-Control s-maxage=86400;
  }

  error_page  405     =200 $uri;
}

